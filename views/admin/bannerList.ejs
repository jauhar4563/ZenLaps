<%- include('../Layouts/adminHeader.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner List</h2>
                </div>
                <!-- <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="#" class="btn btn-primary btn-sm rounded">Create new</a>
                </div> -->
            </div>
            <div class="card mb-4">
              <form action="" method="get">

                <div style="display: flex;  align-items: center;">
                  <input type="text" id="searchInput" class="form-control" placeholder="Search for products...">

                 
                  <div class="col-md-3 col-12 me-auto mb-md-0 mb-3" style="display: flex;">

                    <label for="status" class="form-control">Select Status:</label>
                    <select name="status" class="form-select" id="status">
                        <option value="" selected>All</option>
                        <option value="blocked">Blocked</option>
                        <option value="unblocked">Unblocked</option>
                    </select>
                  </div>
 
                    <input type="submit" class="btn btn-sm font-sm rounded btn-brand" value="Filter">

              </div>
            </form>
            </div>
            
                
  <div class="card-body">
                   
        <table id="banner" class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Category</th>
                <th scope="col">Subtitle</th>
               



              </tr>
            </thead>
            <tbody>
              <%
                if (banner.length > 0) {
                  for (let i = 0; i < banner.length; i++) {
                    %>
                    <tr>
                      <td>
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox">
                        </div>
                      </td>
                      <td>
                        <a class="itemside" href="#">
                          <div class="left">
                            <img src="/bannerImages/<%= banner[i].image %>" class="img-sm img-thumbnail" alt="Item">
                          </div>
                          <div class="info">
                            <h6 class="mb-0"><%= banner[i].title %></h6>
                          </div>
                        </a>
                      </td>
                      <td><%= banner[i].bannerType %></td>
                      <td><%= banner[i].category %></td>

                    
                      <!-- <td><%= new Date(banner[i].createdDate).toLocaleDateString() %></td> -->
                      <td>
                        <% if (banner[i].is_blocked == 0) { %>
                          <a href="/admin/blockUser?id=<%= banner[i]._id %>" class="btn btn-sm font-sm rounded btn-danger">
                            <i class="material-icons md-edit"></i> Block
                          </a>
                        <% } else { %>
                          <a href="/admin/blockUser?id=<%= banner[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                            <i class="material-icons md-edit"></i> Unblock
                          </a>

                        <% } %>
                        <a class="btn btn-sm font-sm rounded btn-light" href="/admin/bannerEdit?bannerId=<%= banner[i]._id %>" class="material-icons md-edit"></i>Edit</a>

                      </td>
                    </tr>
                    <%
                  }
                } else {
                  %>
                  <tr>
                    <td colspan="6">
                      <p>User not found</p>
                    </td>
                  </tr>
                  <%
                }
              %>
            </tbody>
          </table>
          
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            
            <div class="pagination-area mt-30 mb-50" style="display: flex; justify-content: center;">
              <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-start">
                    <% if (currentPage > 1) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>"><</a>
                      </li>
                    <% } %>
                
                    <% for (let i = 1; i <= totalPages; i++) { %>
                      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                      </li>
                    <% } %>
                
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">></a>
                      </li>
                    <% } %>
               
                      
                  </ul>
              </nav>
          </div>
        </section> <!-- content-main end// -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script>

document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.getElementById("searchInput");
    const table = document.getElementById("banner");
    const rows = table.getElementsByTagName("tr");

    searchInput.addEventListener("keyup", function () {
        const searchText = searchInput.value.toLowerCase();

        for (let i = 1; i < rows.length; i++) {
            const rowData = rows[i].textContent.toLowerCase();
            if (rowData.includes(searchText)) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }
    });
});
            $(document).ready(function () {
                $('#banner').DataTable({
                    "lengthMenu": [10, 25, 50, 100], // Specify the number of items per page
                    "pageLength": 10, // Set the default number of items per page
                });
            });
        </script>
        
        <%- include('../Layouts/adminFooter.ejs') %>
