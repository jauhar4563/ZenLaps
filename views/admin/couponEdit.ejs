<%- include('../Layouts/adminHeader.ejs') %>



<form action="" method="post"  id="coupon-form" >
    <section class="content-main">
        <div class="row">
            <div class="col-9">

                <div class="content-header">
                    <h2 class="content-title">Edit Coupon</h2>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-4">
                <a href="/admin/couponList"><button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button></a>
                <input type="submit" value="Add Coupon" class="btn btn-md rounded font-sm hover-up">
            </div>
            <div class="col-lg-12">
                
               <input type="hidden" name="couponId" value="<%= coupon._id %>" id="">
             
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="category_name" class="form-label">Coupon code</label>
                                <input type="text" name="couponCode" placeholder="Type here" value="<%= coupon.code %>" class="form-control" id="banner_name">
                                <div class="error-message" style="color: red;" id="banner_name-error"></div>
                            </div>
                            <div class="mb-4">
                                <label for="category_name" class="form-label">Discount</label>
                                <input type="number" name="discount" placeholder="Type here" value="<%= coupon.discount %>" class="form-control" id="banner_link">
                                <div class="error-message" style="color: red;" id="banner_link-error"></div>
                            </div>
                           
                            <div class="mb-4">
                                <div class="form-group">
                                    <label  class="form-label mt-3"  for="limit">Limit</label>
                                    <input type="number" class="form-control" value="<%= coupon.limit %>" id="limit" name="limit" required>
                                </div>
                            </div>
                          
                           

                        </div>
                    </div> <!-- card end// -->
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <div class="form-group">
                                <label   class="form-label mt-3" for="DiscountType">Discount Type</label>
                                <select class="form-control" id="DiscountType"  name="DiscountType" required>
                                    <option value="fixed" <%if(coupon.type=='fixed'){%>selected<%}%>>Fixed</option>
                                    <option value="percentage"  <%if(coupon.type=='percentage'){%>selected<%}%>>Percentage</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 d-flex">

                            <div class="mb-4 col-6">
                                <div class="form-group">
                                    <label  class="form-label mt-3"  for="limit">Min Cart Amount</label>
                                    <input type="number" class="form-control" value="<%= coupon.minCartAmt %>" id="limit" name="minCartAmt" required>
                                </div>
                            </div>
                            <div class="mb-4 col-6">
                                <label  class="form-label mt-3"  for="limit">Max Redeemable Amount</label>
                                <input type="number" class="form-control" value="<%= coupon.maxRedeemableAmt %>" id="limit" name="maxRedeemableAmt" required>
                            </div>
                        </div>
                      
                        <!-- Category Div -->
                        
                
                        <div class="mb-2">
                            <label for="category_name" class="form-label">Expiry</label>
                            <input type="date" name="expiryDate" value="<%= coupon.expiryDate %>" placeholder="Type here" class="form-control" id="expiryDate">
                            <div class="error-message" style="color: red;" id="expiryDate-error"></div>
                        </div>
                      
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>
   

           
            
    
    </section> <!-- content-main end// -->
</form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const bannerTypeSelect = document.getElementById('bannerType');
        const categoryDiv = document.getElementById('categoryDiv');
        const productDiv = document.getElementById('productDiv');
    
        bannerTypeSelect.addEventListener('change', function () {
            const selectedValue = bannerTypeSelect.value;
    
            // Hide both divs by default
            categoryDiv.style.display = 'none';
            productDiv.style.display = 'none';
    
            // Show the appropriate div based on the selected value
            if (selectedValue === 'Category Banner') {
                categoryDiv.style.display = 'block';
            } else {
                productDiv.style.display = 'block';
            }
        });
    });
    </script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('banner-form');

        form.addEventListener('submit', function (event) {
            let isValid = true;

            // Reset error messages
            document.querySelectorAll('.error-message').forEach(function (error) {
                error.textContent = '';
            });

            // Validate input fields
            const requiredFields = ['banner_name', 'banner_link', 'banner_subtitle', 'offer', 'fromDate', 'expiryDate'];
            requiredFields.forEach(function (fieldName) {
                const input = document.getElementById(fieldName);
                if (!input.value.trim()) {
                    isValid = false;
                    const errorMessage = document.getElementById(fieldName + '-error');
                    errorMessage.textContent = 'This field is required.';
                }
            });

            // Validate file input
            const fileInput = document.getElementById('banner_image');
            if (!fileInput.files.length) {
                isValid = false;
                const errorMessage = document.getElementById('banner_image-error');
                errorMessage.textContent = 'Please select an image.';
            } else {
                // Check image dimensions
                const img = new Image();
                img.src = URL.createObjectURL(fileInput.files[0]);

                img.onload = function () {
                    if (img.width !== 600 || img.height !== 300) {
                        isValid = false;
                        const errorMessage = document.getElementById('banner_image-error');
                        errorMessage.textContent = 'Image should be 600px x 300px.';
                        fileInput.value = ''; // Clear the file input
                    }
                };
            }

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
            }
        });
    });


</script>

<script>
    const imagePreview = document.getElementById('image-preview');
    const categoryImageInput = document.getElementById('banner_image');
    
    categoryImageInput.addEventListener('change', function() {
      if (this.files && this.files[0]) {
        const reader = new FileReader();
    
        reader.onload = function(e) {
          imagePreview.src = e.target.result;
        };
    
        reader.readAsDataURL(this.files[0]);
      } else {
        imagePreview.src = "../../Public/adminAssets/imgs/theme/upload.svg";
      }
    });
    
    </script>
    


