                        <div class="mb-4"></div><!-- End .mb-4 -->

                        <div class="toolbox">
                            <div class="toolbox-left">
                                <div class="toolbox-info">
                                    <%= categories.length %> Products found
                                </div><!-- End .toolbox-info -->
                            </div><!-- End .toolbox-left -->
                            <div class="toolbox-right">
                                <div class="toolbox-sort">
                                    <label for="sortby">Categories:</label>
                                    <div class="select-custom">
                                        <select class="form-select" id="category-filter">
                                            <option value="">All Categories</option>
                                            <%
                                            if (categories && categories.length > 0) {
                                                for (let i = 0; i < categories.length; i++) {
                                                    %>
                                                    <option value="<%= categories[i].name %>"><%= categories[i].name %></option>
                                                <% }
                                            }
                                            %>
                                        </select>
                                    </div>
                                    
                                    
                                    
                                </div><!-- End .toolbox-sort -->
                            </div><!-- End .toolbox-right -->
                            <div class="toolbox-right">
                                <div class="toolbox-sort">
                                    <label for="sortby">Sort by:</label>
                                    <div class="select-custom">
                                        <select name="sortby" id="sortby" class="form-control">
                                            <option value="popularity" selected="selected">Most Popular</option>
                                            <option value="rating">Price High to low</option>
                                            <option value="date">Price low to high</option>
                                            <option value="date">Newest first</option>

                                        </select>
                                    </div>
                                </div><!-- End .toolbox-sort -->
                            </div><!-- End .toolbox-right -->
                        </div><!-- End .toolbox -->

                        <div class="products mb-3">
                            <div class="row" id="product-list">
                            



                                <%
                                if (products.length > 0) {
                                  for (let i = 0; i < products.length; i++) {
                                    %>
                                <div class="col-6 col-md-4 col-xl-3" style="margin-left: 30px;" id="">
                                    <div class="product" style="border-radius: 10px;">
                                        <figure class="product-media">
                                            <!-- <span class="product-label label-top">Top</span> -->
                                            <a href="/productView?id=<%= products[i]._id %>">
                                                <img src="../../Public/productImages/<%= products[i].image[0] %>" alt="Product image" class="product-image">
                                            </a>

                                            <div class="product-action-vertical" >
                                                <a href="#" style="text-decoration: none;" class="btn-product-icon btn-wishlist btn-expandable"><span>add to wishlist</span></a>
                                              
                                            </div>

                                            <div class="product-action">
                                                <a href="#" style="text-decoration: none; border-radius: 10px; width: 100%;" class="btn-product btn-cart" title="Add to cart"><span>add to cart</span></a>
                                            </div>
                                        </figure>

                                        <div class="product-body">
                                          
                                            <div class="product-cat">
                                                <a href="#"><%= products[i].brand %></a>
                                            </div>
                                            <div class="product-price">                
                                                <%= products[i].discountPrice %>
                                               <span style="color: rgb(117, 117, 117); margin-left: 10px; text-decoration: line-through;"><%= products[i].price%></span> 
                                            </div>
                                            <h3 class="product-title"><a href="/productView?id=<%= products[i]._id %>">
                                                <% if (products[i].name.length > 110) { %>
                                                  <%= products[i].name.slice(0, 110) + '...' %>
                                                <% } else { %>
                                                  <%= products[i].name %>
                                                <% } %>
                                              </a></h3>
                                                                                          
                                            <div class="ratings-container">
                                                <div class="ratings">
                                                    <div class="ratings-val" style="width: 100%;"></div><!-- End .ratings-val -->
                                                </div><!-- End .ratings -->
                                                <span class="ratings-text">( 4 Reviews )</span>
                                            </div>
                                     
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                <% } else { %>
                                    <div class="col-6 col-md-4 col-xl-3">
                                        <p>User not found</p>
                                    </div>
                                <% } %>
                
                              
                             
                            </div><!-- End .row -->
                        </div><!-- End .products -->

                        <div class="pagination-area mt-30 mb-50" style="display: flex; justify-content: center;">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-start">
                                  <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                      <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                    </li>
                                  <% } %>
                              
                                  <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                  <% } %>
                              
                                  <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                      <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                                  <% } %>
                             
                                    
                                </ul>
                            </nav>
                        </div>
                          
                    </div><!-- End .col-lg-9 -->

                    
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .page-content -->
