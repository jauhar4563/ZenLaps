                                                    <input type="text" class="form-data" name="mobile" value="<%= User.mobile %>">

                                                    <p class="text-muted mb-4"></a></p>
                                                 </div>
                                                 <div>
                                                    <input type="submit" class="btn btn-primary" value="Edit">

                                                 </div>

                                             
                                        </div>

                                        </form>
