<%- include('../Layouts/header.ejs') %>

<style>
     #cartToast{
        visibility: hidden;
      min-width: 250px;
      margin-left: -125px;
      background-color: #c60000;
      color: #fff;
      text-align: center;
      border-radius: 2px;
      padding: 16px;
      position: fixed;
      z-index: 10;
      left: 50%;
      bottom: 30px;
      font-size: 14px;
     }
     #snackbar{
      visibility: hidden;
      min-width: 250px;
      margin-left: -125px;
      background-color: #c60000;
      color: #fff;
      text-align: center;
      border-radius: 2px;
      padding: 16px;
      position: fixed;
      z-index: 10;
      left: 50%;
      bottom: 30px;
      font-size: 14px;
    }
    
    #cartToast.show{
      visibility: visible;
      -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
      animation: fadein 0.5s, fadeout 0.5s 2.5s;
    }
     #snackbar.show {
      visibility: visible;
      -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
      animation: fadein 0.5s, fadeout 0.5s 2.5s;
    }
    
    @-webkit-keyframes fadein {
      from {bottom: 0; opacity: 0;} 
      to {bottom: 30px; opacity: 1;}
    }
    
    @keyframes fadein {
      from {bottom: 0; opacity: 0;}
      to {bottom: 30px; opacity: 1;}
    }
    
    @-webkit-keyframes fadeout {
      from {bottom: 30px; opacity: 1;} 
      to {bottom: 0; opacity: 0;}
    }
    
    @keyframes fadeout {
      from {bottom: 30px; opacity: 1;}
      to {bottom: 0; opacity: 0;}
    }
    </style>

<main class="main">

    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
           
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="Wishlist">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <% if (Wishlist.length > 0) { %>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Brand</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% for (let i = 0; i < Wishlist.length; i++) { %>
                                        <tr>
                                            <td class="product-col">
                                                <div class="product">
                                                    <figure class="product-media">
                                                        <a href="#">
                                                            <img src="../../Public/productImages/<%= Wishlist[i].product.image[0] %>" alt="Product image">
                                                        </a>
                                                    </figure>
                                                    <h3 class="product-title">
                                                        <a href="#"><%= Wishlist[i].product.name.slice(0, 50) + '...' %></a>
                                                    </h3>
                                                </div>
                                            </td>
                                            <td class="price-col"><%= Wishlist[i].product.discountPrice %></td>
                                            <td class="brand-col"><%= Wishlist[i].product.brand %></td>
                                            <td class="total-col">
                                                <% if (Wishlist[i].product.quantity==0) { %>
                                                    <label style="color: red;">Product Out of Stock</label>
                                                <% } else { %>
                                                    <form action="/addToCart?productId=<%= Wishlist[i].product._id %>&wishlist=true"  method="post">
                                                        <div>
                                                            <button type="submit" class="btn-product btn-cart" id="cart_btn"><span>Add To Cart</span></button>
                                                            <input type="hidden" value="1" name="qty" >     
                                                        </div>
                                                                                                    
                                                    </form>
                                                <% } %>
                                            </td>
                                            <td class="remove-col">
                                                <button class="btn-remove" onclick="confirmRemoveWishlistItem('<%= Wishlist[i].product._id %>')">
                                                    <i class="icon-close"></i>
                                                </button>
                                                
                                            </td>
                                            
                                        </tr>
                                    <% } %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" >
                                                <div style="display: flex; justify-content: center;">

                                                    <img src="../../Public/downloadImages/empty-wishlist.png" width="" alt="">
                                                </div>

    
                                           
                                        </td>
                                        
                                    </tr>
                                    <tr>
                                        <td colspan="6">
                                            <div style="display: flex; justify-content: center; margin-top: 30px; ">
                                                <a href="/productsShop" class="btn btn-primary" style="font-size:medium; padding: 5px;"><i class="fa-solid fa-cart-shopping"></i>Continue Shoping</a>
                                            </div>
                                        </td>
                                    </tr>
                                    
                                <% } %>
                            </tbody>
                        </table>
                        <div id="snackbar"><i class="fa-solid fa-trash"></i>  The item is removed from Wishlist..</div>
                        <div id="cartToast"><i class="fa-solid fa-circle-check"></i>Product added to cart..</div>


                        <div class="Wishlist-bottom">
                    

                        </div><!-- End .Wishlist-bottom -->
                    </div><!-- End .col-lg-9 -->

                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .Wishlist -->
    </div><!-- End .page-content -->
</main><!-- End .main -->


<script>

function confirmRemoveWishlistItem(productId) {
    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        background: '#ffffff', // Set the background color to white
        customClass: {
          popup: 'white-background', // Add a custom class for additional styling
        },
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, remove it!"
    }).then((result) => {
        if (result.isConfirmed) {
            removeWishlistItem(productId);
           
        }
    });
}




 function removeWishlistItem(productId) {
    fetch(`/removeFromWishlist?productId=${productId}`, {
        method: 'DELETE',
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            localStorage.setItem('productRemoved', 'true');
            location.reload();
        } else {
            console.error('Failed to remove cart item:', data.error);
        }
    })
    .catch(error => {
        console.error('Error removing cart item:', error);
    });
}





document.addEventListener('DOMContentLoaded', function () {
    const productRemoved = localStorage.getItem('productRemoved');
    if (productRemoved === 'true') {
        myFunction();
        localStorage.removeItem('productRemoved'); 

    }
});
function myFunction() {
  var x = document.getElementById("snackbar");
  x.className = "show";
  setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
}

// cart toast


document.getElementById('cart_btn').addEventListener('click', function () {
    localStorage.setItem('addToCart', 'true');
    cartFunction();
});


document.addEventListener('DOMContentLoaded', function () {
    const productAddedToCart = localStorage.getItem('addToCart');
    if (productAddedToCart === 'true') {
        localStorage.removeItem('addToCart');

         cartFunction();
    }
});


function cartFunction() {
  var x = document.getElementById("cartToast");
  x.className = "show";
  setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
}


</script>

